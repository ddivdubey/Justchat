<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall2"
    tools:context=".About">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/cardView_verify"

        app:cardBackgroundColor="@color/cardview_shadow_end_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/txt1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/textcolour2"
            android:textAlignment="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:text="Just Chat"/>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/textcolour2"
            android:textAlignment="gravity"
            android:fontFamily="sans-serif"
            android:padding="5dp"
            android:text="Just Chat is a private chat application where users can chat with different users
            in a secured manner share data such as photos,file etc.User are provided extra features such as
            image optical character recognition and language translation to five lanhuages "
            android:layout_marginTop="110dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt3"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="5dp"
        android:text="Developed by:   Diyansh Dubey
                                      \t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\t\ Divyam Dembla                                    \n\n\nEmail:escalon.projects@gmail.com"
        android:textAlignment="gravity"
        android:textColor="@color/textcolour2"
        android:textIsSelectable="true"
        android:textSize="20sp"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="484dp" />


</androidx.constraintlayout.widget.ConstraintLayout>